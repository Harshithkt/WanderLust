    <p>
    <b><%= x.title %></b>
      
     
        <h3>Description:</h3><%= x.description %>
        <h3>Price:</h3>&#8377 <%= x.price.toLocaleString('en-IN') %>
        <h3>Location:</h3><%= x.location %>
        <h3>Country</h3><%= x.country %>
  
    </p>
    
  <div class="d-flex justify-content-center mt-4 gap-3 flex-wrap">
  <form action="/listings/<%= x.id %>/edit" method="GET">
    <button class="btn btn-secondary px-4">
      ✏️ Edit
    </button>
  </form>

  <form action="/listings/<%= x.id %>?_method=DELETE" method="POST">
    <button class="btn btn-danger px-4">
      🗑️ Delete
    </button>
  </form>
</div>

